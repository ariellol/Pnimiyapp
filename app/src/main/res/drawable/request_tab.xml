<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:height="200dp" android:width="300dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGrey"/>
            <corners android:radius="15dp"/>
            <stroke android:color="@color/primaryColorGreen" android:width="2dp"/>
        </shape>
    </item>

    <item android:height="40dp" android:id="@+id/titleInRequestTab">
        <shape android:shape="rectangle">
            <size android:width="300dp" android:height="40dp"/>
            <solid  android:color="@color/primaryColorGreen"/>
            <corners android:topRightRadius="15dp" android:topLeftRadius="15dp"/>
        </shape>
    </item>


</layer-list>