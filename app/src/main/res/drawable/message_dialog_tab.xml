<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:height="150dp" android:width="250dp">
        <shape android:shape="rectangle">
            <size android:width="250dp" android:height="150dp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="15dp"/>
            <stroke android:color="@color/blue" android:width="2dp"/>
        </shape>
    </item>

    <item android:height="40dp" android:id="@+id/textViewItem">
        <shape android:shape="rectangle">
            <size android:width="250dp" android:height="40dp"/>
            <solid  android:color="@color/blue"/>
            <corners android:topRightRadius="15dp" android:topLeftRadius="15dp"/>
        </shape>
    </item>


</layer-list>