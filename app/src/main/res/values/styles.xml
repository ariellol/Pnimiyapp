<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryColorGreen</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="materialTimePickerTheme">@style/timePickerTheme</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground"> @drawable/launch_screen</item>

    </style>

    <style name="timePickerTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="colorSurface">@color/lightGrey</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="blueStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="orangeStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="turkizStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/turkiz</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="yellowStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="redStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="cyanStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="darkBlueStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="noActionBarNoMaterial" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
        <item name="textAppearanceButton">@color/white</item>
        <item name="colorPrimary">@color/primaryColorGreen</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

</resources>
