<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RestorePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:id="@+id/logoLayout"
        android:background="@color/primaryColorGreen">
        <ImageView
            android:src="@drawable/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:background="@drawable/edit_text_background"
        android:id="@+id/newPassword"
        android:hint="סיסמה חדשה*"
        android:layout_centerInParent="true"
        android:paddingRight="5dp"
        android:gravity="right|center"
        android:inputType="textPassword"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="wrap_content"
        android:paddingRight="5dp"
        android:id="@+id/newRePassword"
        android:hint="חזור על סיסמה חדשה*"
        android:gravity="right|center"
        android:layout_centerInParent="true"
        android:layout_marginVertical="15dp"
        android:layout_below="@id/newPassword"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="החלף לסיסמה החדשה"
        android:layout_below="@id/newRePassword"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="@drawable/button_green"
        android:id="@+id/setNewPassword"/>

</RelativeLayout>