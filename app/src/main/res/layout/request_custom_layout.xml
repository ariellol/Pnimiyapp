<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:background="@drawable/request_tab">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/topLayout"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/request_date"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/requestName"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:textSize="16sp"
        android:id="@+id/requestTitle"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/topLayout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/moneyAmountTextView"
        android:visibility="gone"
        android:layout_below="@id/requestTitle"
        android:layout_marginBottom="10dp"
        android:paddingRight="15dp"

        android:text="סכום הכסף המבוקש: "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/requestTitle"
        android:visibility="gone"
        android:id="@+id/datesRequest">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מתאריך: "
            android:layout_marginLeft="10dp"
            android:id="@+id/fromDateTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עד התאריך: "
            android:id="@+id/toDateTextView"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestTitle"
        android:layout_marginTop="45dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:id="@+id/requestDescription"/>

</RelativeLayout>
