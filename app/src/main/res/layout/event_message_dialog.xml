<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="250dp"
    android:background="@drawable/message_dialog_tab"
    android:layout_height="170dp"
    android:layoutDirection="rtl"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingVertical="5dp"
        android:gravity="center"
        android:id="@+id/eventDateDialog"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/left_arrow"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:id="@+id/eventsNumTextView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_arrow"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/eventTitleDialog"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/eventDescriptionDialog"
        android:layout_marginTop="80dp"/>

</RelativeLayout>