<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:id="@+id/hint_contact_full_name"
        android:text="שם איש הקשר: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:layout_below="@id/hint_contact_full_name"
        android:id="@+id/contact_full_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:text="מס' טלפון: "
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/contact_full_name"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/hint_contact_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/hint_contact_phone"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:id="@+id/contact_phone"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:id="@+id/callContact"
        android:src="@drawable/ic_baseline_call_24"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="15dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_baseline_message_24"
        android:paddingLeft="5dp"
        app:tint="@color/grey"
        android:layout_below="@id/callContact"
        android:id="@+id/sendMessage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/sendMessage"
        app:tint="@color/black"
        android:id="@+id/addContact"
        android:src="@drawable/ic_add_black_24dp"/>
</RelativeLayout>